</BaseLayout>

<style>
  .hero {
    margin-bottom: var(--spacing-xl);
  }

  .hero h1 {
    font-size: 2.5rem;
    margin-top: 0;
    margin-bottom: var(--spacing-xs);
  }

  .tagline {
    font-size: 1.2rem;
    color: var(--color-text-light);
    margin-bottom: var(--spacing-md);
  }

  .bio {
    font-size: 1.05rem;
    max-width: 600px;
    margin-bottom: var(--spacing-lg);
  }

  .hero-links {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  .interests-list {
    list-style: none;
    padding: 0;
  }

  .interests-list li {
    padding: var(--spacing-sm) 0;
    border-bottom: 1px solid var(--color-border);
  }

  .interests-list li:last-child {
    border-bottom: none;
  }

  .award {
    background-color: #fef3c7;
    color: #92400e;
    padding: 0.15rem 0.4rem;
    border-radius: 3px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  @media (max-width: 600px) {
    .hero h1 {
      font-size: 2rem;
    }
  }
</style>
