const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container footer-content">
    <p class="copyright">
      &copy; {currentYear} Prabhu Vellaisamy. All rights reserved.
    </p>
    <nav class="footer-links">
      <a href="PrabhuVellaisamyResume_2025.pdf">CV</a>
      <a href="https://github.com/prabsy96" target="_blank" rel="noopener noreferrer">GitHub</a>
      <a href="https://scholar.google.com/citations?user=YOUR_ID" target="_blank" rel="noopener noreferrer">Google Scholar</a>
      <a href="https://linkedin.com/in/prabhu-vellaisamy" target="_blank" rel="noopener noreferrer">LinkedIn</a>
    </nav>
